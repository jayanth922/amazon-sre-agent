version: '3.9'

services:
  jaeger:
    image: jaegertracing/all-in-one:latest
    ports:
      - "16686:16686"  # Jaeger UI
      - "14250:14250"  # gRPC for collector
    environment:
      - COLLECTOR_OTLP_ENABLED=true
      

  otel-collector:
    image: otel/opentelemetry-collector-contrib:latest
    command: ["--config=/etc/otel-collector-config.yaml"]
    volumes:
      - ./otel-collector-config.yaml:/etc/otel-collector-config.yaml
    ports:
      - "4317:4317"   # OTLP gRPC receiver
      - "4318:4318"   # OTLP HTTP receiver
    depends_on:
      - jaeger
  
  mcp-gateway:
    build: ./gateway/oss-mcp
    environment:
      BACKEND_API_KEY: ${BACKEND_API_KEY:-dev-api-key}
      RUNBOOKS_BASE_URL: https://runbooks:8014   # or your host/port
      # K8S_BASE_URL: https://k8s:8011
      # LOGS_BASE_URL: https://logs:8012
      # METRICS_BASE_URL: https://metrics:8013
      # REQUIRE_BEARER: "1"   # enable if you front this with JWT
    ports:
      - "9001:9001"
    depends_on:
      - runbooks